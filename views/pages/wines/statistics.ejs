  <link type="text/css" rel="stylesheet" href="/stylesheets/blog.css">

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wine üç∑ Not?</title>
</head>

<body>
  <div>
    <%- include("../../components/navbar2.ejs"); %>

  </div>

  <div class="myChart">
    <canvas id="myChart2" class="myChart"></canvas>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>

    var data1 = [0, 0, 0];
    var labels = ['Red', 'white', 'Rose'];

  </script>
  <% for(var i=0; i < wines.length; i++) { %>
    <% if(wines[i].type=="White wine" ){%>
      <script>
        data1[1]++; 
      </script>
      <%}%>
        <% if(wines[i].type=="Red wine" ){%>
          <script>
            data1[0]++; 
          </script>
          <%}%>
            <% if(wines[i].type=="Rose wine" ){%>
              <script>
                data1[2]++; 
              </script>
              <%}%>

                <% } %>
                  <script>
                    const data = {
                      labels: labels,
                      datasets: [{
                        backgroundColor: [
                          'rgb(163,24,24)',
                          'rgb(250,214,165)',
                          'rgb(255, 185, 185)'
                        ],
                        data: data1
                      }]
                    };

                    const config2 = {
                      type: 'doughnut',
                      data: data,
                      options: {}
                    };
                  </script>



                  <script>
                    const myChart2 = new Chart(
                      document.getElementById('myChart2'),
                      config2
                    );
                  </script>

</body>


</html>