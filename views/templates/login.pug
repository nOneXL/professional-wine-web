extends layout

block css-content
    link(href="/stylesheets/login.css" rel="stylesheet")

block page-content
    section.vh-100
        .container-fluid
            .row
                .col-sm-6.text-black
                    .px-5.ms-xl-4
                        i.fas.fa-crow.fa-2x.me-3.pt-5.mt-xl-4(style='color: #709085;')
                        span.h1.fw-bold.mb-0 Wine üç∑ Not?
                    .d-flex.align-items-center.h-custom-2.px-5.ms-xl-4.mt-5.pt-5.pt-xl-0.mt-xl-n5
                        form(style='width: 23rem;' action="/users")
                            h3.fw-normal.mb-3.pb-3(style='letter-spacing: 1px;') Log in
                            .form-outline.mb-4
                                input#form2Example18.form-control.form-control-lg(type='email')
